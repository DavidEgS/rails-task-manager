<h2>A nice list of tasks to do</h2>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <% if task.completed == true %>
        [X]
      <% else %>
        [ ]
      <% end %>
      <%= link_to "#{task.title}", task_path(task.id) %> <BR>
      <%= link_to "delete", delete_path(task.id),
      method: :delete,
      data: { confirm: "Delete #{task.title}?" } %>
    </li>
  <% end %>
</ul>

<p>
  <%= link_to "add a new task", new_path %>
</p>
